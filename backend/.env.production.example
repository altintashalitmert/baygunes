NODE_ENV=production
PORT=3000

# Set your frontend domain (for CORS)
FRONTEND_URL=https://app.example.com

# Coolify PostgreSQL connection string
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME

# Required for auth token signing
JWT_SECRET=CHANGE_ME_TO_LONG_RANDOM_SECRET

# Behind reverse proxy (Coolify)
TRUST_PROXY=true

# Optional: central logging (Elasticsearch)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX=baygunes
SERVICE_NAME=baygunes-backend

# Optional mail-related settings (if needed by templates)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
