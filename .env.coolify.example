# Baygunes PBMS - Production Environment Variables

# Database (PostgreSQL)
DATABASE_URL=postgresql://baygunes:YOUR_DB_PASSWORD@postgres:5432/baygunes?schema=public
POSTGRES_USER=baygunes
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_DB=baygunes

# Redis
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE

# JWT
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_MIN_32_CHARS_LONG
JWT_EXPIRATION=8h

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=https://baygunes.35.246.196.169.sslip.io
VITE_API_URL=https://api.baygunes.35.246.196.169.sslip.io

# Elasticsearch (for logging to hesapos-dev)
ELASTICSEARCH_URL=http://hesapos-elasticsearch:9200

# Server
PORT=3000
NODE_ENV=production

# File Upload
MAX_FILE_SIZE=20971520
UPLOAD_DIR=public/uploads
